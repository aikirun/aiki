{
	"name": "aiki",
	"version": "0.1.12",
	"private": true,
	"type": "module",
	"workspaces": ["lib", "types", "server", "sdk/client", "sdk/worker", "sdk/task", "sdk/workflow"],
	"scripts": {
		"check": "tsc --noEmit",
		"lint": "bunx @biomejs/biome lint .",
		"lint:fix": "bunx @biomejs/biome lint --write .",
		"fmt": "bunx @biomejs/biome format .",
		"fmt:fix": "bunx @biomejs/biome format --write .",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"server": "bun run server/server.ts",
		"server:watch": "bun --watch run server/server.ts",
		"changeset": "changeset",
		"bump": "changeset version",
		"clean": "rm -rf lib/dist types/dist server/dist sdk/*/dist",
		"build:server": "bun build server/server.ts --compile --outfile server/dist/aiki-server",
		"build:lib": "bun run --cwd lib build",
		"build:types": "bun run --cwd types build",
		"build:sdk": "bun run --cwd sdk/workflow build && bun run --cwd sdk/client build && bun run --cwd sdk/task build && bun run --cwd sdk/worker build",
		"prepublishOnly": "bun run build:lib && bun run build:types && bun run build:sdk",
		"publish": "changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@changesets/cli": "^2.27.1",
		"@types/node": "^22.10.2",
		"bun-types": "^1.1.38",
		"tsup": "^8.5.1",
		"typescript": "^5.7.2"
	}
}
