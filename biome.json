{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [":NODE:", ":PACKAGE:", ":BLANK_LINE:", ["./**"]]
					}
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error"
			},
			"style": {
				"useNamingConvention": {
					"level": "warn",
					"options": {
						"strictCase": false,
						"conventions": [
							{
								"selector": { "kind": "objectLiteralProperty" },
								"formats": ["camelCase", "snake_case", "PascalCase", "CONSTANT_CASE"]
							}
						]
					}
				}
			},
			"suspicious": {
				"noConsole": "warn",
				"noAsyncPromiseExecutor": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "es5",
			"semicolons": "always"
		}
	},
	"files": {
		"includes": ["**", "!*.md", "!!**/npm", "!!**/dist", "!!**/node_modules", "!!**/coverage"]
	},
	"overrides": [
		{
			"includes": ["web/**/*.tsx", "web/**/*.ts"],
			"linter": {
				"rules": {
					"a11y": {
						"noSvgWithoutTitle": "off"
					}
				}
			}
		},
		{
			"includes": ["**/*.css"],
			"linter": {
				"rules": {
					"suspicious": {
						"noUnknownAtRules": "off"
					}
				}
			}
		}
	]
}
