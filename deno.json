{
	"compilerOptions": {
		"strict": true,
		"useUnknownInCatchVariables": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true
	},
	"tasks": {
		"server": "deno run --allow-net --allow-read --allow-env server/server.ts",
		"server:watch": "deno run --allow-net --allow-read --allow-env --watch server/server.ts"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@^1.0.13",
		"@std/async": "jsr:@std/async@^1.0.12"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"trailingCommas": "onlyMultiLine",
		"exclude": ["*.md"]
	},
	"lint": {
		"rules": {
			"tags": ["recommended", "jsr"],
			"include": [
				"camelcase",
				"no-sync-fn-in-async-fn",
				"no-console"
			]
		}
	},
	"workspace": [
		"./lib",
		"./types",
		"./contract",
		"./server",
		"./sdk/client",
		"./sdk/worker",
		"./sdk/task",
		"./sdk/workflow"
	]
}
