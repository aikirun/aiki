{
	"compilerOptions": {
		"strict": true,
		"useUnknownInCatchVariables": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true
	},
	"tasks": {
		"server": "deno run --allow-net --allow-read --allow-env server/server.ts",
		"server:watch": "deno run --allow-net --allow-read --allow-env --watch server/server.ts",
		"example": "sh -c 'deno run --allow-net --allow-read --allow-env examples/$0.ts'",
		"sync-version": "deno run --allow-read --allow-write scripts/sync-version.ts",
		"publish-jsr": "bash scripts/publish-jsr.sh",
		"publish-npm": "bash scripts/publish-npm.sh",
		"post-publish": "bash scripts/post-publish.sh",
		"release": "deno task publish-jsr && deno task publish-npm && deno task post-publish"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"trailingCommas": "onlyMultiLine",
		"exclude": ["*.md"]
	},
	"lint": {
		"rules": {
			"tags": ["recommended", "jsr"],
			"include": [
				"camelcase",
				"no-sync-fn-in-async-fn",
				"no-console"
			]
		}
	},
	"exclude": ["scripts/build-npm.ts", "**/npm/"],
	"workspace": [
		"./lib",
		"./types",
		"./server",
		"./sdk/client",
		"./sdk/worker",
		"./sdk/task",
		"./sdk/workflow"
	]
}
